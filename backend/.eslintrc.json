{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/"],
  "overrides": [
    {
      "files": ["src/admin/components/**/*.{js,jsx}", "src/admin/**/*.jsx"],
      "env": {
        "browser": true,
        "node": false
      }
    }
  ]
}
