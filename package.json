{
  "name": "bio-baum-bauer",
  "version": "1.0.0",
  "type": "module",
  "description": "Bio Baum Bauer Website",
  "scripts": {
    "start:dev": "docker-compose up -d --build",
    "start:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "stop:dev": "docker-compose down && docker volume prune -f && docker container prune -f && docker image prune -f",
    "stop:prod": "docker-compose -f docker-compose.prod.yml down && docker volume prune -f && docker container prune -f && docker image prune -f",
    "test": "echo \"No tests specified\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "eslint": "^9.17.0",
    "eslint-plugin-n": "^17.15.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9"
  },
  "lint-staged": {
    "backend/**/*.{js,ts}": "eslint --fix",
    "backend/**/*.{js,ts,md}": "prettier --write"
  }
}
